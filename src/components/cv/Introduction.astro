---
interface Props {
  firstName: string;
  lastName: string;
  title: string;
}

const { firstName, lastName, title } = Astro.props;
---

<div class="flex flex-col gap-2">
  <h1 class="text-4xl tracking-wide text-center">
    <span class="font-extrabold">{firstName}</span>
    {lastName}
  </h1>

  <h2 class="text-xl text-center">{title}</h2>
</div>
