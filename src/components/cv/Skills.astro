---
interface Props {
  show?: string[];
  classes?: string;
}

const { show = [], classes = "" } = Astro.props;
---

<div class={"flex flex-col gap-2 " + classes}>
  <h2 class="text-xl font-extrabold">SKILLS</h2>

  {
    show.length > 0 && (
      <ul class="list-inside list-disc">
        {show.map((skill) => (
          <li>{skill}</li>
        ))}
      </ul>
    )
  }

  <hr />
</div>
