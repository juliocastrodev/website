---
import "../styles/global.css";
import faviconReference from "../assets/favicon.svg";

interface Props {
  title?: string;
  description?: string;
  bodyClasses?: string;
}

const { title = "", description = "", bodyClasses = "" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href={faviconReference.src} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class={"min-h-screen " + bodyClasses}>
    <slot />
  </body>
</html>
